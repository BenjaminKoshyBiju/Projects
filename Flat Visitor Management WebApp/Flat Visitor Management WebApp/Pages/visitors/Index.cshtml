@page
@model Flat_Visitor_Management_WebApp.Pages.visitors.IndexModel
@{
}
<br>
<h2>List of Clients</h2>
<a class='btn btn-primary btn-sm' href='/visitors/Create'>New Visitor</a>
<table class="table">
 <thead>
    <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Address</th>
    <th>Visiting Flat</th>
    <th> Created At</th>
    <th>Action</th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model.listVisitors)
    {
        <tr>
           <td>@item.id</td>
           <td>@item.name</td>
           <td>@item.email</td>
           <td>@item.phone</td>
           <td>@item.address</td>
           <td>@item.flat</td>
           <td>@item.created_at</td>

           <td>
               <a class="btn btn-primary btn-sm" href="/visitors/Edit?id=@item.id"> Edit </a>
               <a class="btn btn-danger btn-sm" href="/visitors/Delete?id=@item.id"> Delete </a>
            </td>
        </tr>
    }
    
   
</tbody>
</table>